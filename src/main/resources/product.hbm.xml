<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
 <class name="org.o7planning.resthiber.product" table="product"
  catalog="itec637">
  <id name="no" type="java.lang.Integer">
   <column name="no"></column>
   <generator class="identity"></generator>
  </id>
  
<property name="isbn" type="java.lang.Integer">
   <column name="isbn" length="16"></column>
  </property>

  <property name="title" type="java.lang.String">
   <column name="title" length="200"></column>
  </property>

  <property name="cat" type="java.lang.String">
   <column name="cat" length="20"></column>
  </property>

  <property name="pub" type="java.lang.String">
   <column name="pub" length="60"></column>
  </property>

  <property name="auth" type="java.lang.String">
  <column name="auth" length="50"></column>
  </property>
     
  <property name="price" type="java.lang.Double">
   <column name="price" length="15"></column>
  </property>

   <property name="quantity" type="java.lang.Integer">
   <column name="quantity" length="15"></column>
  </property>

  <property name="imgPath" type="java.lang.String">
   <column name="image" length="15"></column>
  </property>

 </class>
</hibernate-mapping>

